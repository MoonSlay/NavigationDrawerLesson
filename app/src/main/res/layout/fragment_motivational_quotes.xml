<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#479cc2">

    <TextView
        android:id="@+id/txt_motivational_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="The harder you work for something, the greater youâ€™ll feel when you achieve it."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/btn_randomize_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:backgroundTint="#5647c2"
        android:text="Randomize Quote"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_random"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_motivational_quote" />

    <Button
        android:id="@+id/btn_save_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:backgroundTint="#E91E63"
        android:text="Save Quote"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_randomize_quote" />

    <Button
        android:id="@+id/btn_show_quotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="15dp"
        android:backgroundTint="#4CAF50"
        android:text="Show All Quotes"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_quote" />

</androidx.constraintlayout.widget.ConstraintLayout>
